#file css/karya.css
product {
	display: flex;
	flex-direction: column;
	gap: 5px;
	border-radius: 3px;
	border: 1px solid black;
	transition: .75s;
	cursor: pointer;

	> thumb {
		width: 100%;
		height: 124px;
		background-size: cover;
	}

	> b, small {
		padding: 5px;
	}

	&:hover {
		background: black;
		color: white;
	}
}
